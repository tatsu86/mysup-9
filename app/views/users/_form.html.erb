<div class="bgclear">
<% if flash[:error_messages] %>
  <div class="alert alert-danger">
    <% flash[:error_messages].each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </div>
<% end %>
  <div style="padding:15px">
  <%= form_with model: user do |f| %>
    <div class="form-group">
      <%= f.label :name, 'ユーザー名' %>
      <%= f.text_field :name, placeholder: "まいさぷ", class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :unique_id, 'ID' %>
      <%= f.text_field :unique_id, placeholder: "mysup_id", class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :email, 'メールアドレス' %>
      <%= f.text_field :email, placeholder: "mysup@example.com", class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :password, 'パスワード　※8文字以上' %>
      <%= f.password_field :password, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, 'パスワード（確認）' %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>
    <%= f.submit '作成', class: 'btn btn-primary' %>
  </div>
</div>
<% end %>