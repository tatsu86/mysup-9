<div class="back-image-capsules">
  <div class="container">
    <h2>ユーザー登録</h2>
    <div class="bgclear">
      <%= render "devise/shared/error_messages", resource: resource %>
      <div style="padding:15px">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :name, 'ユーザー名' %>
            <%= f.text_field :name, placeholder: "MySupplement", class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :unique_id, 'ID　※英数字または_(アンダースコア)のみ' %>
            <%= f.text_field :unique_id, placeholder: "mysup_id", class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :email, 'メールアドレス' %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "mysup@example.com", class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :password, 'パスワード　※6文字以上' %>
            <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, 'パスワード（確認）' %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
          </div>
          <%= f.submit '作成', class: 'btn btn-primary', style: 'width: 100%' %>
        <% end %>
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>
