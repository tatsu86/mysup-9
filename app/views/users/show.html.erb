<div class="container">
  <h1>マイページ</h1>

  <%= form_with url: mypage_path, method: :get do |f| %>
    <div class="icon-user" style="border-radius:50%; overflow:hidden; border:1px solid black; display:inline-block; float:left;">
      <%= image_tag 'unknown.png', class:'', style:'height:100px;' %>
    </div>
    <div>
      <%= link_to 'プロフィール編集', edit_user_path(@user.id), class: 'btn btn-primary' %>
    </div>
  
    <div style="clear:both; padding-top: 5px">
      <div calss="form-group">
        <%= f.label :name, 'ユーザー名' %>
        <%= f.text_field :name, class: "form-control", readonly: true, value: @user.name %>
      </div>
      <div class="form-group">
        <%= f.label :introduction, '自己紹介' %>
        <%= f.text_field :introduction, class: "form-control", readonly: true, value: @user.introduction %>
      </div>
    </div>

  <% end %>
</div>