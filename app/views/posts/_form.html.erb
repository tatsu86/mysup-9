<% if flash[:error_messages]  %>
  <div class="alert alert-danger">
    <ul>
      <% flash[:error_messages].each do |msg|  %>
        <li><%= msg %></li>
      <% end %>
    <ul>
  </div>
<% end %>

<%= form_with model: post do |f| %>
    <div>
        <%= link_to 'キャンセル', :back %>
        <%= f.submit '投稿する', class: 'btn-tweet' %>
    </div>
  
    <%= f.hidden_field :user_id, value: @current_user.id %>
    <div class="form-group">
        <%= f.text_area :body, rows: 10, class: 'form-control' %>
    </div>

    <div class="form-group">
        <span>タグ</span>
        <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
            <div class="form-check">
                <%= tag.label class: 'form-check-label' do %>
                    <%= tag.check_box class: 'form-check-input' %>
                    <%= tag.text %>
                <% end %>
            </div>
      <% end %>
    </div>
    <span></span>
      <%= f.hidden_field :evaluation, id:"evoluation_value", class: 'form-control' %>
<% end %>
<div>
  おすすめ度：
  <%= button_tag "", id:"evoluation_1", class:"far fa-star", onclick:"ChangeEvoluation(1)" %>
  <%= button_tag "", id:"evoluation_2", class:"far fa-star", onclick:"ChangeEvoluation(2)" %>
  <%= button_tag "", id:"evoluation_3", class:"far fa-star", onclick:"ChangeEvoluation(3)" %>
  <%= button_tag "", id:"evoluation_4", class:"far fa-star", onclick:"ChangeEvoluation(4)" %>
  <%= button_tag "", id:"evoluation_5", class:"far fa-star", onclick:"ChangeEvoluation(5)" %>
</div>

<script>
  function ChangeEvoluation(num) {
    $("#evoluation_value").val(num);
    for (var i=1; i<=5; i++) {
      $("#evoluation_" + i).removeClass("fas fa-star");
      $("#evoluation_" + i).addClass("far fa-star");
    }

    for (var i=1; i<=num; i++) {
      $("#evoluation_" + i).removeClass("far fa-star");
      $("#evoluation_" + i).addClass("fas fa-star");
    }
  }
</script>